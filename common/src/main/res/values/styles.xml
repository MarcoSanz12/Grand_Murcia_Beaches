<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@color/black_50</item>
    </style>
    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- BOTONES MENÃšS -->
    <style name="ButtonMenu">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="height">70dp</item>
    </style>

    <!-- TAB LAYOUT & ITEMS -->
    <style name="tab_gta" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/gta3</item>
        <item name="android:textSize">16sp</item>
    </style>



<!--  TABS LAYOUT-->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ly_home_init">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">137.97dp</item>
        <item name="android:layout_margin">10.95dp</item>
    </style>

    <style name="h1">
        <item name="fontFamily">@font/toms_handwritten</item>
        <item name="android:textSize">@dimen/dimen_text_30</item>
    </style>
    <style name="text">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/dimen_text_30</item>
    </style>
    <style name="title">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/dimen_text_22</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/dimen_text_14</item>
    </style>
    <style name="buttons">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/dimen_text_18</item>
    </style>
    <style name="pie">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/dimen_text_22</item>
    </style>
    <style name="parent_background">
        <item name="background">@color/background_activity</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
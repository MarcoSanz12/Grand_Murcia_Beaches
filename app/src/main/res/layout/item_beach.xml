<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="16dp"
    android:background="@color/transparent"
    tools:background="@color/favorite_color_transparent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_itemImage"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Chip"
        app:srcCompat="@drawable/beach"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp" />
    <TextView
        android:id="@+id/tv_itemName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/gta4"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        app:layout_constraintStart_toEndOf="@id/iv_itemImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Bicho's beach and his friends"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
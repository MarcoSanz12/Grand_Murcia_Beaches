<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="actionbar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_toStartOf">@+id/ly_buttons</item>
        <item name="android:layout_toEndOf">@+id/back</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/gta2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="gta_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gta2</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_margin">5dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/gta4</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
    </style>

    <style name="CategoryContent">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gta3</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CategoryConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>

    </style>

    <style name="CategoryLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ContactIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>
    <style name="ContactText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.9</item>
    </style>

    <style name="SocialIcon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ExpandableSymbol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:src">@drawable/expand_more</item>
    </style>

</resources>